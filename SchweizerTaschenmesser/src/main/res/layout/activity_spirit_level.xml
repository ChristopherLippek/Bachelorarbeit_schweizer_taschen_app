<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpiritLevel">

    <ImageView
        android:id="@+id/spiritLevelBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="30dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_spiritlevel" />

    <TextView
        android:id="@+id/xText"
        android:layout_width="190dp"
        android:layout_height="39dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="615dp"
        android:text="X Accel"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/yText"
        android:layout_width="143dp"
        android:layout_height="35dp"
        android:layout_marginStart="107dp"
        android:layout_marginTop="348dp"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="348dp"
        android:text="Y Accel"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Space
        android:id="@+id/bubbleHorizontalBoundaries"
        android:layout_width="138dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="@+id/spiritLevelBackground"
        app:layout_constraintStart_toStartOf="@+id/spiritLevelBackground"
        app:layout_constraintTop_toTopOf="@+id/spiritLevelBackground" />

    <Space
        android:id="@+id/bubbleVerticalBoundaries"
        android:layout_width="50dp"
        android:layout_height="114dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/spiritLevelBackground"
        app:layout_constraintEnd_toEndOf="@+id/spiritLevelBackground"
        app:layout_constraintTop_toTopOf="@+id/spiritLevelBackground" />

    <ImageView
        android:id="@+id/spiritLevelBubbleHorizontal"
        android:layout_width="24dp"
        android:layout_height="33dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="@+id/bubbleHorizontalBoundaries"
        app:layout_constraintStart_toStartOf="@+id/bubbleHorizontalBoundaries"
        app:layout_constraintTop_toTopOf="@+id/bubbleHorizontalBoundaries"
        app:srcCompat="@drawable/ic_bubble" />

    <ImageView
        android:id="@+id/spiritLevelBubbleVertical"
        android:layout_width="33dp"
        android:layout_height="24dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/bubbleVerticalBoundaries"
        app:layout_constraintEnd_toEndOf="@+id/bubbleVerticalBoundaries"
        app:layout_constraintTop_toTopOf="@+id/bubbleVerticalBoundaries"
        app:srcCompat="@drawable/ic_bubble" />

</android.support.constraint.ConstraintLayout>